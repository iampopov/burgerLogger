<div class="row">
  <div class="col-centered">
    <h1>Eat more burgers!</h1>
    <img src="https://i.dlpng.com/static/png/33596_preview.png" alt="Image of a delicious burger" height="250">
  </div>
</div>
<div class="col-notCentered">
  <div class="row">
    <div class="col">
      {{!-- <h2>Burgers that are eaten!</h2> --}}
      <ol>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eat=false}}
        {{/if}}
        {{/each}}
      </ol>
    </div>

    <div class="col">
      {{!-- <h2>Burgers that are not eaten!</h2> --}}
      <ol>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block eat=true}}
        {{/unless}}
        {{/each}}
      </ol>
    </div>
  </div>
</div>
</div>
<div class="row">

  <div class="col-centered">
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group d-none">
        <label for="eaten">Eaten?</label><br>
        <input type="radio" name="eaten" value="1" checked> Eaten!<br>
        <input type="radio" name="eaten" value="0"> Not eaten!
      </div>

      <button type="submit">Add a burger</button>
    </form>
  </div>